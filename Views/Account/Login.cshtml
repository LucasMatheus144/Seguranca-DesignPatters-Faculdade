
@model EspacoPotencial.Models.Account.Login;
@{
    Layout = "_Vazio";
    var errorMessage = TempData["ErrorMessage"] as string;
}


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] EspacoPotencial</title>
    <link rel="stylesheet" href="~/css/Login.css">
    <script defer src="~/js/login.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>

    <header>
        <nav class="nav">
            <a href="#">Sobre</a>
            <button class="btnLogin">Login</button>
        </nav>

    </header>

    <!-- Pop Up  -->
    
    <main class="hublogin">
        <span class="icon-close"><ion-icon name='close'></ion-icon></span>
        <span></span>
        <div class="box-login">
            <h2>Login</h2>
            <form asp-controller="Account" asp-action="Login" method="post" role="form">
                <div asp-validation-summary="All"></div>
                <div class="input-box">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <span class="icon">
                        <ion-icon name='mail'></ion-icon>
                    </span>
                    <input type="text" asp-for="Username" required autocomplete="username" />
                    <label for="Username">Usu√°rio</label>
                </div>
                <div class="input-box">
                    <span class="icon">
                        <ion-icon name='lock-closed'></ion-icon>
                    </span>
                    <input type="password" asp-for="Password" required autocomplete="current-password" />
                    <label for="Password">Senha</label>
                </div>
                <div class="input-box login_button">
                    <button type="submit" class="btn">Login</button>
                </div>
            </form>

        </div>
    </main>

@if(TempData["ErrorMessage"] != null)
{
    <div id="Alert" class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

</body>

</html>

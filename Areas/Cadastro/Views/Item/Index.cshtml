@model IEnumerable<EspacoPotencial.Areas.Cadastro.Models.Financeiro.item>

@{
    ViewData["Title"] = "Listagem";
     var Message = TempData["Message"] as string;
}

@if(TempData["Message"] != null)
{
    <div id="Alert" class="alert alert-danger">
        @TempData["Message"]
    </div>
}

<h1>Listagem de Itens</h1>


<p>
    <a asp-action="Create"  class="btn btn-success btn-sm">Cadastro Item</a>
</p>
<table class="table" id ="Cadastro">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.qntdeunitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorunitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.situacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.armazem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qntdeunitario)
            </td>
            <td>    
                 @if (item.valorunitario != null){
                         @Html.DisplayFor(modelItem => item.valorunitario)
                 }else{
                     <text>Sem valor</text>
                 }
            </td>
            <td>
                 @if (item.situacao == "1")
                {
                    <text>Liberado</text>
                }
                else if (item.situacao == "2")
                {
                    <text>Bloqueado</text>
                }
                else if (item.situacao == "3")
                {
                    <text>Pendente</text>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.armazem.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo.descricao)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-secondary btn-sm"> <i class="fas fa-info-circle"></i> Detalhes</a> 
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Excluir</a>   
            </td>
        </tr>
}
    </tbody>
</table>

@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.grupo_permitido

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Grupo Permitido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="grp_id" />
            <div class="form-group">
                <label asp-for="grp_descricao" class="control-label"></label>
                <input asp-for="grp_descricao" class="form-control" />
                <span asp-validation-for="grp_descricao" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

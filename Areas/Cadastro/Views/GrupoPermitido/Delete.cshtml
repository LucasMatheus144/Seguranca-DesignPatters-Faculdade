@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.grupo_permitido

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusao</h1>

<h3>Tem certeza que deseja excluir o grupo <strong> @Model.grp_descricao </strong> </h3>
<div>

    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.grp_descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.grp_descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="grp_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
    </form>
</div>

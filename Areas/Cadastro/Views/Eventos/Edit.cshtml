@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.eventos

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Eventos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="eventos_id" />
            <div class="form-group">
                <label asp-for="evento_nome" class="control-label"></label>
                <input asp-for="evento_nome" class="form-control" />
                <span asp-validation-for="evento_nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="evento_data_ini" class="control-label"></label>
                <input asp-for="evento_data_ini" class="form-control" />
                <span asp-validation-for="evento_data_ini" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="evento_data_fin" class="control-label"></label>
                <input asp-for="evento_data_fin" class="form-control" />
                <span asp-validation-for="evento_data_fin" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

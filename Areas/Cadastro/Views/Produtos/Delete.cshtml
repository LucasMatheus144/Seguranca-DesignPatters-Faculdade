@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.produtos

@{
    ViewData["Title"] = "Exclusao";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir o <strong>@Model.produtos_descricao</strong></h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.produtos_descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.produtos_descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.produtos_unidade)
        </dt>
        <dd class="col-sm-10">
            @if (Model.produtos_unidade == "U")
            {
                <text>Unidade</text>
            }
            else if (Model.produtos_unidade == "Kg")
            {
                <text>Quilo</text>
            }
            else if (Model.produtos_unidade == "L")
            {
                <text>Litro</text>
            }
            else
            {
                <text>Sem medida</text>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.produtos_qtde_unit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.produtos_qtde_unit)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.produtos_evento)
        </dt>
        <dd class="col-sm-10">
            @if (Model.produtos_evento == "S")
            {
                <text>Sim</text>
            }
            else
            {
                <text>NÃ£o</text>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="produtos_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
    </form>
</div>

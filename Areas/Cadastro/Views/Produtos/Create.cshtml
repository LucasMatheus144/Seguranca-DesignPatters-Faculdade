@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.produtos

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>produtos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="produtos_descricao" class="control-label"></label>
                <input asp-for="produtos_descricao" class="form-control" />
                <span asp-validation-for="produtos_descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="produtos_unidade" class="control-label"></label>
                <select asp-for="produtos_unidade" class="form-control">
                    <option value="Kg">Quilos</option>
                    <option value="L">Litros</option>
                    <option value="U">Unidade</option>
                </select>
                <span asp-validation-for="produtos_unidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="produtos_qtde_unit" class="control-label"></label>
                <input asp-for="produtos_qtde_unit" class="form-control" />
                <span asp-validation-for="produtos_qtde_unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="produtos_evento" class="control-label"></label>
                <select asp-for="produtos_evento" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">NÃ£o</option>
                </select>
                <span asp-validation-for="produtos_evento" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.movimento_venda

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>movimento_venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="geral_id" class="control-label"></label>
                <select asp-for="geral_id" class ="form-control" asp-items="ViewBag.geral_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="movimento_tipo" class="control-label"></label>
                <select asp-for="movimento_tipo" class="form-control">
                    <option value="1">À Vista</option>
                    <option value="2">À Prazo</option>
                    <option value="3">Baixa Movto</option>
                    <option value="4">Baixa Parcial</option>
                    <option value="5">Estorno</option>
                </select>
                <span asp-validation-for="movimento_tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_outro" class="control-label"></label>
                <input asp-for="movimento_outro" class="form-control" />
                <span asp-validation-for="movimento_outro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_parcelas" class="control-label"></label>
                <input asp-for="movimento_parcelas" class="form-control" />
                <span asp-validation-for="movimento_parcelas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_dia_vencto" class="control-label"></label>
                <input asp-for="movimento_dia_vencto" class="form-control" />
                <span asp-validation-for="movimento_dia_vencto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_data" class="control-label"></label>
                <input asp-for="movimento_data" class="form-control" />
                <span asp-validation-for="movimento_data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_valor" class="control-label"></label>
                <input asp-for="movimento_valor" class="form-control" />
                <span asp-validation-for="movimento_valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_tipo_pagto" class="control-label"></label>
                <select asp-for="movimento_tipo_pagto" class="form-control">
                    <option value="1">Dinheiro</option>
                    <option value="2">PIX</option>
                    <option value="3">Cartão Débito</option>
                    <option value="4">Cartão Crédito</option>
                    <option value="5">Cheque</option>
                    <option value="6">Depósito Bancário</option>
                </select>
                <span asp-validation-for="movimento_tipo_pagto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_email" class="control-label"></label>
                <input asp-for="movimento_email" class="form-control" />
                <span asp-validation-for="movimento_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movimento_data_estorno" class="control-label"></label>
                <input asp-for="movimento_data_estorno" class="form-control" />
                <span asp-validation-for="movimento_data_estorno" class="text-danger"></span>
            </div> 
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

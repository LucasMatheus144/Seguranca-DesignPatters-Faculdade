@model IEnumerable<EspacoPotencial.Areas.Cadastro.Models.Funcionarios.epi_funcionario>

@{
    ViewData["Title"] = "Listagem";
}

<h1>Listagem de Epi funcionario</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Cadastro Epi Funcionario</a>
</p>
<table class="table" id ="Cadastro">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.epi_geral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vencimento)
            </th>        
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Funcionario.geral.Nome)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.epi_geral.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrega)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Vencimento)
            </td>
                  
           
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"> <i class="fas fa-info-circle"></i> Detalhes</a> 
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Excluir</a> 
            </td>
        </tr>
}
    </tbody>
</table>

@model EspacoPotencial.Areas.Cadastro.Models.Usuarios.datas

@{
    ViewData["Title"] = "Deletar";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="card-title text-center mb-5 text-danger">Confirmação de Exclusão</h1>
                    <h3 class="text-center mb-4">Tem certeza que deseja excluir a data <strong>@Model.Descritivo</strong>?</h3>

                    <div class="mt-4">
                        <h4 class="mb-3">Detalhes da Data</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3 text-muted">Ano:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Ano)</dd>
                            <dt class="col-sm-3 text-muted">Tipo:</dt>
                            <dd class="col-sm-9">
                                @{
                                    string tipoDisplay = "";
                                    switch (Model.Tipo)
                                    {
                                        case "1":
                                            tipoDisplay = "Feriado";
                                            break;
                                        case "2":
                                            tipoDisplay = "Recesso";
                                            break;
                                        case "3":
                                            tipoDisplay = "Planejamento";
                                            break;
                                        default:
                                            tipoDisplay = Model.Tipo.ToString();
                                            break;
                                    }
                                    @tipoDisplay
                                }
                            </dd>
                            <dt class="col-sm-3 text-muted">Descritivo:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descritivo)</dd>
                            <dt class="col-sm-3 text-muted">Data de Início:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.DataInicio)</dd>
                            <dt class="col-sm-3 text-muted">Data Final:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.DataFinal)</dd>
                        </dl>

                        <div class="text-center mt-5">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a asp-action="Index" class="btn btn-secondary ml-3"><i class="fas fa-angle-double-left"></i> Voltar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

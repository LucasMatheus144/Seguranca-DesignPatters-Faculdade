@model IEnumerable<EspacoPotencial.Areas.Cadastro.Models.Financeiro.movimentacao>

@{
    ViewData["Title"] = "Index";
    var Message = TempData["Message"] as string;
}

<h1>Listagem de Movimentação Itens</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Cadastro Movimentação</a>
</p>

@if(TempData["Message"] != null)
{
    <div id="Alert" class="alert alert-danger">
        @TempData["Message"]
    </div>
}

<table class="table" id ="Cadastro">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_retirada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.previsao_devolvido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.devolvido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>           
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.usuario.Geral.Nome)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data_retirada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.previsao_devolvido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.devolvido)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-secondary btn-sm"> <i class="fas fa-info-circle"></i> Detalhes</a> 
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Excluir</a>   
            </td>
        </tr>
}
    </tbody>
</table>

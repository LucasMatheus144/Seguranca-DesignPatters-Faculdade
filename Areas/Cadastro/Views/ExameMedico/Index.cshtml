@model IEnumerable<EspacoPotencial.Areas.Cadastro.Models.Funcionarios.exame_medico>

@{
    ViewData["Title"] = "Listagem";
}

<h1>Listagem de Exames Medicos</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Cadastro Exame Medico</a>
</p>
<table class="table" id ="Cadastro">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAgendada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataExecuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAgendada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataExecuta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.geral.Nome)
            </td>
            <td>
                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"> <i class="fas fa-info-circle"></i> Detalhes</a> 
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Excluir</a> 
            </td>
        </tr>
}
    </tbody>
</table>

@model EspacoPotencial.Areas.Cadastro.Models.Funcionarios.motivo_desligamento

@{
    ViewData["Title"] = "Deletar";
}

<h1>Exclusao</h1>

<h3>Tem certeza que deseja excluir o motivo <strong>@Model.Descricao</strong></h3>
<div>
    <h4>motivo_desligamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
    </form>
</div>

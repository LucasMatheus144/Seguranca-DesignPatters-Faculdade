@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.produtos_geral

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja excluir o <strong>@Model.Produto</strong></h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.produto_geral_valor_uni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.produto_geral_valor_uni)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GrupoPermitido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GrupoPermitido.grp_descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.produtos_descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="produto_geral_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
    </form>
</div>

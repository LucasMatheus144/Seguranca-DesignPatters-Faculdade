@model EspacoPotencial.Areas.Cadastro.Models.Usuarios.sala

@{
    ViewData["Title"] = "Create";
}

<h1>Criação</h1>

<h4>sala</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
             <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <select asp-for="Periodo" class="form-control">
                    <option value="m">Manhã</option>
                    <option value="t">Tarde</option>
                    <option value="n">Noite</option>
                </select>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionario_id" class="control-label"></label>
                <select asp-for="funcionario_id" class ="form-control" asp-items="ViewBag.funcionario_nome"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar para a listagem</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model EspacoPotencial.Areas.Cadastro.Models.Usuarios.sala

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusao</h1>

<h3>Tem certeza que deseja excluir a sala <strong>@Model.Nome</strong></h3>
<div>
    <h4>sala</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Periodo)
        </dt>
        <dd class = "col-sm-10">
             @if (Model.Periodo == "m"){
                <span>Manh√£</span>
             }else if (Model.Periodo == "t"){
                <span>Tarde</span>
             }else{
                <span>Noite</span>
             }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Funcionario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcionario.geral.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
         <input type="submit" value="Delete" class="btn btn-danger" /> 
         <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
    </form>
</div>

@model IEnumerable<EspacoPotencial.Areas.Cadastro.Models.Usuarios.salas_diario>

@{
    ViewData["Title"] = "Listagem";
}

<h1>Listagem Sala Diario</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sala.Nome)
            </td>
            <td>
                @{
                    string periodoDisplay = string.Empty;
                    switch (item.Periodo)
                    {
                        case "m":
                            periodoDisplay = "Manh√£";
                            break;
                        case "t":
                            periodoDisplay = "Tarde";
                            break;
                        case "n":
                            periodoDisplay = "Noite";
                            break;
                        default:
                            periodoDisplay = item.Periodo; 
                            break;
                    }
                }

                @periodoDisplay
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"> <i class="fas fa-info-circle"></i> Detalhes</a> 
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Excluir</a> 
            </td>
        </tr>
}
    </tbody>
</table>

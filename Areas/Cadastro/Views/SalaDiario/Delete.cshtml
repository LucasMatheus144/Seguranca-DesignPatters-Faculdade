@model EspacoPotencial.Areas.Cadastro.Models.Usuarios.salas_diario

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão</h1>

<h3>Tem certeza que deseja excluir o diario da sala de aula <strong>@Model.Sala.Nome</strong></h3>
<div>
    <h4>salas_diario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sala)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sala.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Periodo)
        </dt>
        <dd class="col-sm-10">
            @{
                string periodoDisplay = string.Empty;
                switch (Model.Periodo)
                {
                    case "M":
                        periodoDisplay = "Manhã";
                        break;
                    case "T":
                        periodoDisplay = "Tarde";
                        break;
                    case "N":
                        periodoDisplay = "Noite";
                        break;
                    default:
                        periodoDisplay = Model.Periodo; 
                        break;
                }
            }

            @periodoDisplay
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
         <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
    </form>
</div>

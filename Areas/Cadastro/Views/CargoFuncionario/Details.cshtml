@model EspacoPotencial.Areas.Cadastro.Models.Funcionarios.cargo_funcionario

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="display-4 text-center mb-5">Detalhes do Cargo do Funcionário</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Cargo Funcionário</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <strong>Funcionário:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.funcionario.geral.Nome)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Cargo:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.cargos.Nome)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Situação:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Situacao == "1")
                            {
                                <span>Ativo</span>
                            }
                            else if (Model.Situacao == "0")
                            {
                                <span>Inativo</span>
                            }
                            else
                            {
                                <span>Valor Inválido</span>
                            }
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Data Inicial:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DataInicial)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Data Final:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DataFinal)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Observação:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Observacao)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Motivo do Desligamento:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.motivo_desligamento.Descricao)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ml-3"><i class="fas fa-angle-double-left"></i> Voltar</a>
</div>

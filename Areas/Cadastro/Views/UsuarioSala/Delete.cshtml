@model EspacoPotencial.Areas.Cadastro.Models.Usuarios.usuario_sala

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão</h1>

<h3>Tem certeza que deseja excluir o Usuario <strong>@Model.Usuario.Geral.Nome</strong> da sala <strong>@Model.Sala.Nome</strong>?</h3>
<div>
    <hr />
    <dl class="row">
       <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Periodo)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.Periodo)
            {
                case "m":
                    <text>Manhã</text>
                    break;
                case "t":
                    <text>Tarde</text>
                    break;
                case "n":
                    <text>Noite</text>
                    break;
                default:
                    <text>Período Inválido</text>
                    break;
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Final)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Final)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Geral.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sala)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sala.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
         <input type="submit" value="Delete" class="btn btn-danger" />
         <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
    </form>
</div>

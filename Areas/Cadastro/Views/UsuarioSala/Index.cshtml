@model IEnumerable<EspacoPotencial.Areas.Cadastro.Models.Usuarios.usuario_sala>

@{
    ViewData["Title"] = "Index";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<h1>Listagem de Usuarios Sala</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Cadatro</a>
</p>
<table class="table" id ="Cadastro">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Final)
            </th>
           
           
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sala.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Geral.Nome)
            </td>
           <td>
                @if (item.Periodo == "m")
                {
                    @Html.Raw("ManhÃ£")
                }
                else if (item.Periodo == "t")
                {
                    @Html.Raw("Tarde")
                }
                else if (item.Periodo == "n")
                {
                    @Html.Raw("Noite")
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Periodo)
                }
            </td>      
            <td>
                @Html.DisplayFor(modelItem => item.Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Final)
            </td>          
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"> <i class="fas fa-info-circle"></i> Detalhes</a> 
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Excluir</a> 
            </td>
        </tr>
}
    </tbody>
</table>

@if(TempData["ErrorMessage"] != null)
{
    <div id="Alert" class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
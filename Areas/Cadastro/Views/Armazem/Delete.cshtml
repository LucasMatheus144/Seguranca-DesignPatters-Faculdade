@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.armazem

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="card-title text-center mb-5 text-danger">Confirmação de Exclusão</h1>
                    <h3 class="text-center mb-4">Tem certeza que deseja deletar o armazém <strong>@Model.nome</strong>?</h3>

                    <div class="mt-4">
                        <h4 class="mb-3">Detalhes do Armazém</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3 text-muted">Nome:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.nome)</dd>
                            <dt class="col-sm-3 text-muted">Funcionário:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.funcionario.geral.Nome)</dd>
                            <dt class="col-sm-3 text-muted">Tipo:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.tipo.nome)</dd>
                            <dt class="col-sm-3 text-muted">Quantidade Limite:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.qntdelimite)</dd>
                        </dl>

                        <div class="text-center mt-5">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="id" />
                                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Confirmar Exclusão</button>
                                <a asp-action="Index" class="btn btn-outline-secondary ml-3"><i class="fas fa-angle-double-left"></i> Voltar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model EspacoPotencial.Areas.Cadastro.Models.Financeiro.armazem

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>armazem</h4>
<hr />
<div class="row">
    <div class="">
        <form asp-action="Create" class="form__wrap">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="funcionario_id" class="control-label"></label>
                <select asp-for="funcionario_id" class ="form-control" asp-items="ViewBag.funcionario_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qntdelimite" class="control-label"></label>
                <input asp-for="qntdelimite" class="form-control" />
                <span asp-validation-for="qntdelimite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipo_armazem" class="control-label"></label>
                <select asp-for="tipo_armazem" class ="form-control" asp-items="ViewBag.tipo_armazem"></select>
            </div>
            <br>
            <div class="form-group form-submit">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary "><i class="fas fa-angle-double-left"></i> Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

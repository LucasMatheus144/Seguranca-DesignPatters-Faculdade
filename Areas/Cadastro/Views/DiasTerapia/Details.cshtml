@model EspacoPotencial.Areas.Cadastro.Models.Usuarios.dias_terapia

@{
    ViewData["Title"] = "Detalhes";
}

@functions {
    public string ExibirDiasDaSemana(int diaSemana)
    {
        var diasExibidos = new List<string>();

        if ((diaSemana & 1) == 1)
        {
            diasExibidos.Add("Segunda");
        }
        if ((diaSemana & 4) == 4)
        {
            diasExibidos.Add("Terça");
        }
        if ((diaSemana & 8) == 8)
        {
            diasExibidos.Add("Quarta");
        }
        if ((diaSemana & 16) == 16)
        {
            diasExibidos.Add("Quinta");
        }
        if ((diaSemana & 32) == 32)
        {
            diasExibidos.Add("Sexta");
        }

        return string.Join(" / ", diasExibidos);
    }
}

<h1 class="display-4 text-center mb-5">Detalhes dos Dias de Terapia</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Dias de Terapia</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <strong>Paciente:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Geral.Nome)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Data de Início:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DataInicial)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Data Final:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DataFinal)
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <strong>Dias da Semana:</strong>
                        </dt>
                        <dd class="col-sm-8">
                            @ExibirDiasDaSemana(Model.DiaSemana)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ml-3"><i class="fas fa-angle-double-left"></i> Voltar</a>
</div>
